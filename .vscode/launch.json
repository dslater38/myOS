    "version": "0.2.0",
    "configurations": [
        {
            "type": "gdb",
            "request": "attach",
            "name": "Attach to gdbserver",
            "executable": "/home/slaterd/repos/myOS/kernel",
            "target": "192.168.42.128:11234",
            "remote": true,
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
        {
            "name": "myOS - gdbserver",
            "type": "cppdbg",
            "request": "launch",
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            },
            "program": "${workspaceRoot}/kernel",
            "miDebuggerServerAddress": "192.168.3.13:11234",
            "MIMode": "gdb",
            "args": ["-s","kernel"],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "sourceFileMap" : { "/home/slaterd/repos/myOS" : "U:\\repos\\myOS", "/home/slaterd/repos/myOS/src" : "U:\\repos\\myOS\\src" },
            "environment": [],
//            "externalConsole": true,
        },
        {
            "name": "clang++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "clang++ build active file",
            "miDebuggerPath": "/bin/lldb-mi"
        },
        {
            "name": "myOS - localhost",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/isofiles/boot/kernel",
            "miDebuggerServerAddress": "127.0.0.1:11234",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
              },
              "osx": {
                "MIMode": "gdb"
              },
              "windows": {
                "MIMode": "gdb",
                "miDebuggerPath": "c:\\mingw-w64\\x86_64-7.3.0-posix-seh-rt_v5-rev0\\mingw64\\bin\\gdb.exe"
              }
        }
    ]
}
