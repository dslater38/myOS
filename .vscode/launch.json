{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "myOS - gdbserver",
            "type": "cppdbg",
            "request": "launch",
            "symbolLoadInfo": {
                "loadAll": true,
                "exceptionList": ""
            },
            "program": "${workspaceRoot}/kernel",
            "miDebuggerServerAddress": "192.168.3.13:11234",
            "MIMode": "gdb",
            "args": ["-s","kernel"],
            "stopAtEntry": true,
            "cwd": "${workspaceRoot}",
            "sourceFileMap" : { "/home/slaterd/repos/myOS" : "U:\\repos\\myOS", "/home/slaterd/repos/myOS/src" : "U:\\repos\\myOS\\src" },
            "environment": [],
//            "externalConsole": true,
        },
        {
            "name": "clang++ build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "clang++ build active file",
            "miDebuggerPath": "/bin/lldb-mi"
        }
    ]
}
