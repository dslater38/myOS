    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "enter program name, for example ${workspaceFolder}/a.out",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Bochs (gdb)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/isofiles/boot/kernel32",
            "miDebuggerServerAddress": "localhost:11234",
            "args" : ["-q", "-f", "bochsrc-gdb.txt"],
            "environment": [{"name": "BXSHARE", "value": "/home/slaterd/.local/bochs269/share/bochs"}],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "externalConsole": true,
            "linux": {
                "MIMode": "gdb"
            },
            "osx": {
                "MIMode": "gdb"
            },
            "windows": {
                "MIMode": "gdb"
            }            
        }
    ]
}